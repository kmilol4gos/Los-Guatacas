---
import promociones from "../assets/menu/promociones.json";
import PromotionCard from "./PromotionCard.astro";

const PromotionTitle = "Nuestras Promociones";
const PromotionSubtitle =
	"Aprovecha estas incre√≠bles ofertas y disfruta de los mejores sabores";
---

<section
	id="promociones"
	class="relative w-full py-16 bg-gradient-to-b from-gray-900 to-gray-800 text-white overflow-hidden z-1"
>
	{/* Background pattern */}
	<div class="absolute inset-0 opacity-10">
		<div
			class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')]"
		>
		</div>
	</div>

	<div class="container mx-auto px-4 relative z-10">
		{/* Header */}
		<div class="text-center mb-12">
			<span
				class="inline-block px-4 py-1 mb-3 text-sm font-semibold tracking-wider text-yellow-400 uppercase bg-yellow-400/10 rounded-full"
			>
				Ofertas Especiales
			</span>
			<h2
				class="text-4xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-yellow-400 via-amber-400 to-yellow-500 bg-clip-text text-transparent"
			>
				{PromotionTitle}
			</h2>
			<p class="max-w-2xl mx-auto text-lg text-gray-300">
				{PromotionSubtitle}
			</p>
		</div>

		{/* Promotions Grid */}
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			{
				promociones.map((item, index) => (
					<div
						class={`transition-all duration-500 hover:scale-105 ${index < 3 ? "lg:mt-0" : "lg:mt-8"}`}
					>
						<PromotionCard
							title={item.title}
							description={item.description}
							price={item.price}
							highlight={index === 0}
						/>
					</div>
				))
			}
		</div>

		{/* Decorative elements */}
		<div
			class="absolute -bottom-20 -right-20 w-64 h-64 bg-yellow-400/10 rounded-full filter blur-3xl"
		>
		</div>
		<div
			class="absolute -top-20 -left-20 w-64 h-64 bg-yellow-400/5 rounded-full filter blur-3xl"
		>
		</div>
	</div>
</section>
