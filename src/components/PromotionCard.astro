---
export interface PromotionProps {
	title: string;
	description: string;
	price: string | undefined;
}

const { title, description, price } = Astro.props;
---

<section
	class="flex flex-col justify-center items-center bg-yellow-500 rounded-md overflow-hidden gap-5 max-w-2/3 mx-auto p-4 shadow-lg"
>
	<h1 class="text-xl uppercase font-bold text-center">{title}</h1>
	<p class="text-center">{description}</p>
	<span class="text-xl font-bold text-center">{price}</span>
</section>
